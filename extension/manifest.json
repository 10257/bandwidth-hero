{
  "manifest_version": 2,
  "name": "Bandwidth Hero",
  "description": "Saves bandwidth by compressing images on the page.",
  "version": "1.0.0",
  "icons": {
    "64": "res/images/icon-128.png",
    "128": "res/images/icon-256.png",
    "256": "res/images/icon-512.png"
  },
  "browser_action": {
    "default_icon": "res/images/icon-128.png",
    "default_title": "Saves bandwidth!",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "res/images/placeholder.png"
  ]
}
